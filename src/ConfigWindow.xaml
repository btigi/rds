<Window x:Class="rds.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Folders" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Folders" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid x:Name="FoldersDataGrid" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionChanged="FoldersDataGrid_SelectionChanged"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add" Width="80" Height="30" Margin="5,0" Click="AddButton_Click"/>
            <Button Content="Edit" x:Name="EditButton" Width="80" Height="30" Margin="5,0" Click="EditButton_Click" IsEnabled="False"/>
            <Button Content="Delete" x:Name="DeleteButton" Width="80" Height="30" Margin="5,0" Click="DeleteButton_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>

